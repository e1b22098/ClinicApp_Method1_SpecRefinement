<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clinic.repository.AdminMapper">
    <resultMap id="AdminResultMap" type="com.clinic.domain.Admin">
        <id property="adminId" column="admin_id"/>
        <result property="password" column="password"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findByAdminId" resultMap="AdminResultMap">
        SELECT admin_id, password, created_at, updated_at
        FROM admins
        WHERE admin_id = #{adminId}
    </select>

    <update id="updatePassword">
        UPDATE admins
        SET password = #{password}, updated_at = CURRENT_TIMESTAMP
        WHERE admin_id = #{adminId}
    </update>
</mapper>

